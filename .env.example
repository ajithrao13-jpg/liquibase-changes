# Salesforce Configuration
# Copy this file to .env and update with your values

# Default Salesforce org alias
SF_DEFAULT_ORG=myorg

# Target username for deployment
SF_TARGET_USERNAME=user@example.com

# DevHub username (for scratch orgs)
SF_DEVHUB_USERNAME=devhub@example.com

# Environment
NODE_ENV=development

# Debug mode (set to true for verbose logging)
DEBUG_MODE=false

# S-Docs Configuration
SDOCS_TEMPLATE_PATH=data/sdocsTemplates

# Deployment options
DEPLOY_SDOCS=true
SKIP_TESTS=false
